# LME Daily Report Generator - Environment Variables Example
# Copy this file to .env and fill in your actual values
# Author: Claude Code
# Created: 2025-06-10

# Refinitiv EIKON API Configuration
EIKON_API_KEY=your_eikon_api_key_here

# Optional: Refinitiv Data Platform (RDP) Configuration
RDP_USERNAME=your_rdp_username
RDP_PASSWORD=your_rdp_password
RDP_APP_KEY=your_rdp_app_key

# Email Notification Settings (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
NOTIFICATION_RECIPIENTS=recipient1@company.com,recipient2@company.com

# File Storage Settings (Optional)
DROPBOX_ACCESS_TOKEN=your_dropbox_token
GOOGLE_DRIVE_CREDENTIALS=path_to_credentials.json

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Timezone for report generation
REPORT_TIMEZONE=Asia/Tokyo

# Market Data Provider Backup
BACKUP_DATA_PROVIDER=bloomberg_api_key

# Alert Settings
PRICE_ALERT_THRESHOLD=5.0
INVENTORY_ALERT_THRESHOLD=10.0

# Database Connection (Optional for historical data storage)
DATABASE_URL=postgresql://user:password@localhost:5432/lme_data

# Proxy Settings (if behind corporate firewall)
HTTP_PROXY=http://proxy.company.com:8080
HTTPS_PROXY=https://proxy.company.com:8080

# Development Settings
DEBUG_MODE=false
DEMO_MODE=false